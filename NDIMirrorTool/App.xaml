<Application x:Class="NDI_Mirror_Tool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NDI_Mirror_Tool"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <LinearGradientBrush x:Key="GrayBlueGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#CCCCCC" Offset="0" />
            <GradientStop Color="#DDDDDD" Offset="0.2" />
            <GradientStop Color="#DDDDDD" Offset="0.8" />
            <GradientStop Color="#CCCCCC" Offset="1" />
        </LinearGradientBrush>
    </Application.Resources>
</Application>
